{
    "name": "nearata/flarum-ext-composer-preview",
    "description": "Preview the content of a new discussion while creating it in the composer.",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "support": {
        "source": "https://github.com/Nearata/flarum-ext-composer-preview"
    },
    "require": {
        "flarum/core": "^1.8.0"
    },
    "authors": [
        {
            "name": "simonxeko",
            "role": "Developer"
        },
        {
            "name": "Rafael Horvat",
            "email": "rafael.horvat@icloud.com",
            "role": "Developer"
        },
        {
            "name": "Billy Wilcosky",
            "email": "billy@wilcosky.com",
            "role": "Maintainer"
        },
        {
            "name": "Nearata",
            "homepage": "https://nearata.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Nearata\\ComposerPreview\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Composer Preview",
            "category": "feature",
            "icon": {
                "name": "fas fa-eye",
                "backgroundColor": "#ddd",
                "color": "#000"
            }
        }
    }
}
